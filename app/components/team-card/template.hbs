{{#if isEditMode}}
  <div>
      <div class="team-name-edit">
        {{input type="text" value=editTeam.city}}
        {{input type="text" value=editTeam.mascot}}
      </div>
      <div class="edit-buttons">
          <button {{action "save"}}>save</button>
          <button {{action "cancel"}}>cancel</button>
      </div>
  </div>
{{else}}
    <div class="team-name">
        <div class="team-name-display">
            {{#if teamNameStack}}
                <div>{{team.city}}</div>
                <div>{{team.mascot}}</div>
            {{else}}
                <div>{{team.teamName}}</div>
            {{/if}}
        </div>
        {{#if canEdit}}
          <div class="edit-buttons">
            <button {{action "edit"}}>edit</button>
          </div>
        {{/if}}
    </div>
{{/if}}

{{#if showOrigin}}
  <div class="origin-team-name">
   {{team.originTeamName}}
  </div>
{{/if}}

<div class="image-container {{if isHighlighted "highlighted"}}" {{action "onClick"}}>
    <img src="{{team.imageURL}}" />
</div>